---
import Nav from "../components/Nav.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	code {
		font-family: Manrope, Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	@font-face {
		font-family: 'Manrope';
		src: url('/asset/fonts/Manrope-ExtraLight.ttf') format('truetype');
		font-weight: 200;
	}

	@font-face {
		font-family: 'Manrope';
		src: url('/asset/fonts/Manrope-Light.ttf') format('truetype');
		font-weight: 300;
	}

	@font-face {
		font-family: 'Manrope';
		src: url('/asset/fonts/Manrope-Regular.ttf') format('truetype');
		font-weight: 400;
	}

	@font-face {
		font-family: 'Manrope';
		src: url('/asset/fonts/Manrope-Medium.ttf') format('truetype');
		font-weight: 500;
	}

	@font-face {
		font-family: 'Manrope';
		src: url('/asset/fonts/Manrope-SemiBold.ttf') format('truetype');
		font-weight: 600;
	}

	@font-face {
		font-family: 'Manrope';
		src: url('/asset/fonts/Manrope-Bold.ttf') format('truetype');
		font-weight: 700;
	}

	@font-face {
		font-family: 'Manrope';
		src: url('/asset/fonts/Manrope-ExtraBold.ttf') format('truetype');
		font-weight: 800;
	}

	body {
		font-family: 'Manrope', sans-serif;
		font-weight: 400;
		font-size: 16px;
		line-height: 1.5;
	}

	h1 {
		font-family: 'Manrope', sans-serif;
		font-weight: 800;
		font-size: 32px;
		line-height: 1.2;
	}

	h2 {
		font-family: 'Manrope', sans-serif;
		font-weight: 600;
		font-size: 24px;
		line-height: 1.3;
	}

	p {
		font-family: 'Manrope', sans-serif;
		font-weight: 400;
		font-size: 16px;
		line-height: 1.5;
	}

</style>
